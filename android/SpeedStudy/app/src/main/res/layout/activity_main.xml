<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:id="@+id/file_browser_button_row"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/to_local_files_button"
            android:layout_centerInParent="true"
            android:layout_height="80dp"
            android:layout_width="200dp"
            android:text="Open Local File Browser"
            android:onClick="openLocalFileBrowser"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/file_browser_button_row"
        android:id="@+id/review_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/to_reviews_button"
            android:layout_centerInParent="true"
            android:layout_height="80dp"
            android:layout_width="200dp"
            android:text="Reviews (0)"
            android:onClick="openReviews"/>
    </LinearLayout>


</RelativeLayout>
